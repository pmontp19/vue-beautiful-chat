  "description": "A simple and beautiful Vue chat component backend agnostic.",
  "main": "dist/vue-beautiful-chat.cjs.js",
  "module": "dist/vue-beautiful-chat.es.js",
  "browser": "dist/dist/vue-beautiful-chat.umd.js",
  "exports": {
    ".": {
      "import": "./dist/vue-beautiful-chat.es.js",
      "export": "./dist/vue-beautiful-chat.umd.js"
    }
  },
  "repository": "https://github.com/pmontp19/vue-beautiful-chat.git",
  "author": "Pere Montpeo <peremontpeo@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "npm run watch",
    "build": "vite build",
    "watch": "vite build --watch",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --fix src",
    "format": "prettier . --write",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/*"
